@model Sistema_COEBB.Models.Foto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Edit</h2>

    @using (Html.BeginForm("Create", "Foto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Foto</legend>

            @Html.HiddenFor(model => model.IDFOTO)

            <div class="editor-label">
                @Html.LabelFor(model => model.CAMINHO)
            </div>
            <div class="editor-field">
                <input type="file" name="file" id="file" />
                @Html.HiddenFor(model => model.CAMINHO)
                @Html.ValidationMessageFor(model => model.CAMINHO)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.NOMEFOTO)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NOMEFOTO)
                @Html.ValidationMessageFor(model => model.NOMEFOTO)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.IDNOTICIA, "Noticia")
            </div>
            <div class="editor-field">
                @Html.DropDownList("IDNOTICIA", String.Empty)
                @Html.ValidationMessageFor(model => model.IDNOTICIA)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.IDEQUIPE, "Equipe")
            </div>
            <div class="editor-field">
                @Html.DropDownList("IDEQUIPE", String.Empty)
                @Html.ValidationMessageFor(model => model.IDEQUIPE)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
