@model IEnumerable<Sistema_COEBB.Models.Noticia>
@{
    ViewBag.Title = "Noticia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Container -->
<br />
<br />
<div id="banners"></div>
<div class="container">
    <div class="row">
        @if (Model.Count() == 0)
        {
            <p>Sem notícias para exibição</p>
        }
        else
        {
            foreach (var item in Model)
            {
                if (@item.TIPO == "n" || @item.TIPO == "N" || @item.TIPO == "Noticia" || @item.TIPO == "noticia" || @item.TIPO == "Notícia" || @item.TIPO == "notícia")
                {
                    <div class="col-lg-6">
                        <div class="blog-post">
                            <div class="container">
                                <h1 class="blog-title">

                                    <i class="fa fa-file-text"></i>
                                    @item.TITULO_NOTICIA
                                </h1>
                                <br />

                                @if (item.Fotos.Count == 0)
                                {
                                    <img src="~/img/slider/blog3.jpg" alt="Feature-img" align="right" width="510" height="380" class="blog-image rounded" />
                                }
                                else
                                {
                                    <img src="@item.Fotos.ToArray()[0].CAMINHO" alt="Feature-img" align="right" width="510" height="380" class="blog-image rounded img-responsiva"  />
                                }


                                <br />
                                <p>
                                    @item.CORPO_TEXTO.Substring(200, 200)...
                                </p>
                                <div>
                                    <span class="badge">@item.DATANOTICIA</span>
                                </div>
                                @Html.ActionLink("Ver Mais..", "Detalhe", new { id = item.IDNOTICIA }) |
                            </div>
                            <hr>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>