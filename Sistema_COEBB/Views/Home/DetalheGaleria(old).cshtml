@model IEnumerable<Sistema_COEBB.Models.Noticia>

@{
    ViewBag.Title = "DetalheGaleria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container" style="text-align:left;">
    @if (Model.Count() == 0)
    {
        <p>Sem notícias para exibição</p>
    }
    else
    {
        foreach (var item in Model)
        {
            if (@item.TIPO == "g" || @item.TIPO == "G" || @item.TIPO == "galeria" || @item.TIPO == "Galeria")
            {
                <fieldset>
                    <div class="container" style="text-align:center">
                        <h2>@item.TITULO_NOTICIA</h2>
                    </div>
                    <span class="display-field badge">
                        Postado na data: @item.DATANOTICIA
                    </span>
                    <br />
                    @if (item.Fotos.Count == 0)
                    {
                        <img src="~/img/slider/blog3.jpg" alt="Feature-img" align="right" width="100%" class="blog-image" />
                    }
                    else
                    {
                        <img src="@item.Fotos.ToArray()[0].CAMINHO" alt="Feature-img" align="right" width="100%" class="blog-image" />
                    }


                    <div class="display-field">
                        @item.CORPO_TEXTO
                    </div>
                </fieldset>
            <br />
        <hr />
            <br />
            }
        }
    }
    <a class="btn btn-secondary" @Html.ActionLink("Voltar", "Galeria")</a>
</div>
