@model IEnumerable<Sistema_COEBB.Models.Equipe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">


    <p>
        @Html.ActionLink("Criar", "Create")
    </p>
</div>
<div class="container-fluid" style="text-align:center">
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-md-3">
                <div class="list-group">
                    <a href="../Noticia/Index" class="list-group-item list-group-item-action">Noticia</a>
                    <a href="../Foto/Index" class="list-group-item list-group-item-action">Foto</a>
                    <a href="#" class="list-group-item list-group-item-action bg-warning">
                        Equipe
                    </a>
                </div>
            </div>
            <div class="col-xs-9 col-md-9">
                <table border="1">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NOME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DESCRICAOCARGO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DESCRICAOAFINIDADE)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DESCRICAOCARGO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DESCRICAOAFINIDADE)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.IDEQUIPE }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.IDEQUIPE }) |
                                @Html.ActionLink("Deletar", "Delete", new { id = item.IDEQUIPE })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>