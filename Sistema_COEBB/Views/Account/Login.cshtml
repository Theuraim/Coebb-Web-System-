@model Sistema_COEBB.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="container-fluid" style="text-align:center">
    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
    </hgroup>

    <section id="loginForm">
        <h2>Use sua conta para logar.</h2>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Login</legend>
                <ul>
                    <li>
                        <label style="padding-right:8px">Nome do Usuário</label>
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </li>
                    <li>
                        <label style="padding-right:86px">Senha</label>
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </li>
                </ul>
                <input type="submit" value="Log in" />

            </fieldset>

            <p>
                @Html.ActionLink("Registrar", "Register") Se voce nao possui uma conta
            </p>

        }
</div>
        </section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
